- name: Deploy the Create Go App project
  hosts: cgapp_project

  #
  # List of all roles.
  #
  roles:
    - { role: docker, tags: [docker] }
    - { role: backend, tags: [backend] }
    - { role: redis, tags: [redis] }
    - { role: postgres, tags: [postgres] }
